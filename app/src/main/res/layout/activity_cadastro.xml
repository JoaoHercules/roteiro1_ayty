<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joaohercules.roteiro_1.CadastroActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/editTextNome"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="203dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Sobrenome"
        android:ems="10"
        android:id="@+id/editTextSobrenome"
        android:layout_below="@+id/editTextNome"
        android:layout_alignEnd="@+id/editTextNome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="UsuÃ¡rio"
        android:ems="10"
        android:id="@+id/editTextUsuario"
        android:layout_below="@+id/editTextSobrenome"
        android:layout_alignEnd="@+id/editTextSobrenome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Senha"
        android:ems="10"
        android:id="@+id/editTextSenha"
        android:layout_below="@+id/editTextUsuario"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirmar Senha"
        android:ems="10"
        android:id="@+id/editTextConfirmarSenha"
        android:layout_below="@+id/editTextSenha"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/buttonCadastrar"
        android:layout_below="@+id/editTextConfirmarSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        />

</RelativeLayout>
